<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>


<body>

    
   
   
    <div class="min-h-screen w-full bg-gradient-to-r from-zinc-500 to-blue-400">
    <div class="form p-10">
        <form action="/create" method="post">
            <input 
              class="block w-full px-5 py-2 bg-zinc-800 text-white rounded-md outline-none" 
              type="text" 
              placeholder="Title goes here"
              name="title"
            >
            <textarea 
              class="block w-full px-5 py-2 resize-none mt-2 rounded-md outline-none" 
              placeholder="write here"
              name="details"
            ></textarea>
            <input 
              class="mt-2 block bg-blue-600 rounded-md  hover:bg-blue-900 px-4 py-2 text-white" 
              type="submit" 
              value="Create Task"
            >
          </form>
          
    </div>


<div class="tasks p-10 flex gap-3 flexwrap">

    <% if(files.length>0){%>
        <% files.forEach(function(val){ %>

            <!-- 1 -->
    <div class="task w-72 px-5 py-4 rounded-md bg-zinc-800"> 
        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
        <div class="flex mt-3 items-center justify-between">
        <a class="text-blue-500 inline-block " href="/file/<%= val %>">Read more</a>
        <a href="/edit/<%= val %>" class="text-zinc-100"> Edit Filename </a>
    </div>
    </div>

    <!-- 2 -->

       <% }) %>
    <% } else { %>
        <h3 class="text-zinc-100 px-2"> No tasks yet</h3>
        <% } %>
    

    
</div>



</div>
